<RelativeLayout
    style="@style/AuthBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sw.ribbit.ui.SignUpActivity">

    <ImageView
        android:id="@+id/background_image"
        style="@style/AuthBackgroundImage" />

    <TextView
        android:id="@+id/title"
        style="@style/AuthTitle"
        android:layout_marginTop="180dp" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/AuthTitle.AuthSubtitle" />

    <LinearLayout
        android:id="@+id/edit_text_layout"
        style="@style/AuthFieldContainer"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/username_field"
            style="@style/AuthEditText"
            android:hint="@string/username_hint" />

        <EditText
            android:id="@+id/password_field"
            style="@style/AuthEditText"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/email_field"
            style="@style/AuthEditText"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_layout"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/content_desc_button_divider"
        android:src="@drawable/button_divider" />

    <Button
        android:id="@+id/sign_up_button"
        style="@style/AuthButton"
        android:layout_alignLeft="@id/edit_text_layout"
        android:layout_below="@id/edit_text_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@id/button_divider"
        android:text="@string/sign_up_button_label" />

    <Button
        android:id="@+id/cancel_button"
        style="@style/AuthButton"
        android:layout_alignRight="@id/edit_text_layout"
        android:layout_below="@id/edit_text_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@id/button_divider"
        android:text="@string/cancel_button_label" />
</RelativeLayout>
